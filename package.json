{
    "name": "rn-env",
    "version": "0.1.0",
    "author": "wya-team",
    "license": "MIT",
    "main": "./node_modules/react-native-scripts/build/bin/crna-entry.js",
    "scripts": {
        "start": "npm run dev",
        "dev": "npm run all",
        "serve": "react-native-scripts start",
        "eject": "react-native-scripts eject",
        "android": "react-native-scripts android",
        "ios": "react-native-scripts ios",
        "mock": "cd ./src/mock && npm run start",
        "lint": "esw ./src/pages",
        "lint:fix": "npm run lint -- --fix",
        "lint:watch": "npm run lint -- --fix --watch",
        "all": "npm-run-all --parallel --race --continue-on-error lint:watch serve",
        "lint-staged": "lint-staged",
        "pre-commit:install": "cp .hooks/* .git/hooks/",
        "test": "node node_modules/jest/bin/jest.js --watch"
    },
    "jest": {
        "preset": "jest-expo"
    },
    "dependencies": {
        "antd-mobile": "^2.1.3",
        "expo": "^27.0.0",
        "immutable": "^3.8.2",
        "rc-form": "^2.1.7",
        "react": "^16.3.2",
        "react-native": "^0.55.2",
        "react-native-keyboard-aware-scroll-view": "^0.4.4",
        "react-native-root-siblings": "^3.0.0",
        "react-navigation": "^2.0.1",
        "react-navigation-redux-helpers": "^1.0.2",
        "react-redux": "^5.0.6",
        "redux": "^3.7.2",
        "redux-persist": "^5.5.0",
        "redux-thunk": "^2.2.0"
    },
    "devDependencies": {
        "babel-eslint": "^8.2.1",
        "babel-plugin-import": "^1.6.3",
        "babel-plugin-module-resolver": "^2.7.1",
        "babel-plugin-transform-decorators-legacy": "^1.3.4",
        "babel-preset-expo": "^4.0.0",
        "cp-cli": "^1.1.0",
        "cross-env": "^5.1.3",
        "eslint": "^4.16.0",
        "eslint-plugin-babel": "^4.1.2",
        "eslint-plugin-markdown": "^1.0.0-beta.6",
        "eslint-plugin-react": "^7.5.1",
        "eslint-watch": "^3.1.3",
        "jest-expo": "^27.0.0",
        "json-server": "^0.12.1",
        "lint-staged": "^6.0.1",
        "mockjs": "^1.0.1-beta3",
        "npm-run-all": "^4.1.2",
        "pre-commit": "^1.2.2",
        "promt": "0.0.0",
        "react-native-scripts": "^1.11.1",
        "react-test-renderer": "^16.2.0",
        "remote-redux-devtools": "^0.5.12",
        "rimraf": "^2.6.2"
    },
    "lint-staged": {
        "{src}/**/*.{js}": [
            "esw --fix",
            "git add"
        ],
        "*.md": [
            "esw --ext '.md' --fix",
            "git add"
        ]
    },
    "pre-commit": [
        "lint-staged"
    ]
}
